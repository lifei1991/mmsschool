/* pages/testHome/testHome.wxss */
.class-home {
  background-color: #FAFAFA;
  font-size: 24rpx;
  padding-bottom: 180rpx;

  /* height: 100%; */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  font-family: PingFang-SC-Medium,PingFang-SC;

}

.class-type {
  background-color: #FFFFFF;
  width: 100%;
  margin-top: 4px;
  height: 288rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.one-type-div {
  width: 670rpx;
  height: 100%;
  padding: 24rpx 0;
  position: relative;
}

.type-image {
  width: 360rpx;
  height: 176rpx;
}

.type-title {
  width:100%;
  height:40rpx;
  font-size:14px;
  font-family:PingFang-SC-Medium,PingFang-SC;
  font-weight:500;
  color:rgba(57,60,61,1);
  line-height:40rpx;
  margin-bottom: 24rpx;
}

.right-div {
  display: inline-block;
  height: 176rpx;
  margin-left: 48rpx;
  vertical-align: top;
  position: relative;
}

.type-count, .type-people {
  height:34rpx;
  font-size:24rpx;
  font-family:PingFang-SC-Regular,PingFang-SC;
  font-weight:400;
  color:rgba(57,60,61,1);
  line-height:34rpx;
}

.type-count {
  margin-bottom: 16rpx;
}

.type-button-text {
  position: absolute;
  left: 0;
  bottom: 0rpx;
  width:180rpx;
  height:60rpx;
  background:rgba(240,127,83,1);
  border-radius:8rpx;

  font-size:24rpx;
  font-family:PingFang-SC-Medium,PingFang-SC;
  font-weight:500;
  color:rgba(255,255,255,1);
  line-height:60rpx;
}

/* tab切换 */
.swiper-tab{
    width: 100%;
    /* border-bottom: 2rpx solid #ccc; */
    text-align: center;
    height: 88rpx;
    line-height: 88rpx;
    display: flex;
    flex-flow: row;
    justify-content: space-between;
    color: #666665;
    font-size: 28rpx;
    font-family:PingFang-SC-Medium,PingFang-SC;
    background-color: #FFFFFF;
}
.swiper-tab-item{
    width: 50%; 
    color:#666665;
    display: flex;
    flex-flow: column;
    text-align: center;
    align-items: center;
    height: 88rpx;
}
.active{
  color:#28A7A9;
  font-size: 28rpx;
  font-weight: bold;

  
}
.juzhong{
  margin: 0 auto;
}

.show{
  display: block;
  width: 100%;
}
.hidden{
  display: none;
}

.under-border {
  width:113rpx;
  border-bottom: 4rpx solid #28A7A9;
  height: 84rpx;
}