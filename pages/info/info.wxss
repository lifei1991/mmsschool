/* pages/info/info.wxss */
.info {
  background-color: #FAFAFA;

  margin: 0;
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #FFFFFF;
}

.userinfo-avatar {
  width: 180rpx;
  height: 180rpx;
  background-size: contain;
  margin: 20rpx 0 40rpx;
}

.userinfo-name {
  height:44rpx;
  font-size:32rpx;
  font-family:PingFangTC-Regular,PingFangTC;
  font-weight:400;
  color:rgba(35,31,35,1);
  line-height:44rpx;
  margin-bottom: 40rpx;
}

.space {
  height: 8rpx;
  margin-top: 0rpx;
  margin-bottom: 0rpx;
}

.cells:before {
  border-top: 0px;
}

.cells:after {
  border-bottom: 0px;
}

.exit {
  background-color: #FFFFFF;
  height:100rpx;
  font-size:32rpx;
  font-family:PingFang-SC-Medium,PingFang-SC;
  font-weight:500;
  color:rgba(134,134,134,1);
  line-height:100rpx;
  position: absolute;
  bottom: 20%;
  width: 100%;

}

.exit:after {
  border: 0px;
}