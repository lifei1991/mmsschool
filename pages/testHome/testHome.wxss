/* pages/testHome/testHome.wxss */
.test-home {
  background-color: #FAFAFA;
  font-size: 24rpx;
  padding-bottom: 180rpx;

  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  font-family: PingFang-SC-Medium,PingFang-SC;

}

.test-type {
  background-color: #FFFFFF;
  width: 100%;
  margin-bottom: 4px;
  height: 450rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.one-type-div {
  width: 670rpx;
  height: 100%;
  padding: 20rpx 0 24rpx;
  position: relative;
}

.type-image {
  width: 100%;
  height: 284rpx;
}

.type-title {
  width:324rpx;
  height:60rpx;
  font-size:52rpx;
  font-family:FZRUIZH_CUJW--GB1-0,FZRUIZH_CUJW--GB1;
  font-weight:normal;
  color:rgba(57,60,61,1);
  line-height:60rpx;
  margin-top: 20rpx;
}

.type-count, .type-people {
  height:34rpx;
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(57,60,61,1);
  line-height:34rpx;
  margin-top: 8rpx;
}

.type-count {
  margin-right: 64rpx;
}

.type-button-text {
  position: absolute;
  right: 0;
  bottom: 24rpx;
  width:180rpx;
  height:60rpx;
  background:rgba(240,127,83,1);
  border-radius:8rpx;

  font-size:24rpx;
  font-family:PingFang-SC-Medium,PingFang-SC;
  font-weight:500;
  color:rgba(255,255,255,1);
  line-height:60rpx;
}