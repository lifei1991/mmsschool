  line-height: 84rpx;
  font-size:32rpx;
  font-family:PingFang-SC-Medium,PingFang-SC;
  font-weight:500;
  display: inline-block;
  margin-bottom: 60rpx;
}

.re-test-button {
  background:rgba(250,250,250,1);
  border:1px solid rgba(240,127,83,1);
  margin-right: 62rpx;
  color:rgba(240,127,83,1);
}

.save-button {
  background:rgba(240,127,83,1);
