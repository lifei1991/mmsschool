/* 自定义指示点 */
.dots {
  margin: 24rpx 0rpx 80rpx;
  height: 16rpx;
}

.my-swiper-dot {
  width: 80rpx;
  height: 16rpx;
  background:rgba(86,204,202,1);
  border-radius:4rpx;
  display: inline-block;
  margin: 0 8rpx;
  vertical-align: top;
}

.my-swiper-dot-active {
  background:rgba(250,250,250,1) !important;
}

