.item-ans {
  width: 100%;
  display: flex;
  flex-grow: row no-wrap;
  justify-content: space-between;
  padding: 24rpx 40rpx 24rpx 0;
  box-sizing: border-box;
  min-height: 192rpx;
  align-items: center;
  /* border-bottom: 1px solid #f2f2f2; */

  background-color: #FFFFFF;
  margin-bottom: 8rpx;
}

.avatar {
  min-width: 100rpx;
  height: 100rpx;
  position: relative;
  padding-right: 16rpx;

  font-size:60rpx;
  font-family:PingFangSC-Semibold,PingFang SC;
  font-weight:600;
  color:rgba(40,167,169,1);
  line-height:100rpx;
  text-align: center;
}

.avatar .img {
  width: 100%;
  height: 100%;
}

.avatar .doyen {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  bottom: -2px;
  right: 20rpx;
}

.expertInfo {
  font-size: 12px;
  flex-grow: 2;
  color: #b0b0b0;
  line-height: 1.5em;
}

.expertInfo .name {
  min-height:44rpx;
  font-size:32rpx;
  font-family:PingFang-SC-Medium,PingFang-SC;
  font-weight:500;
  color:rgba(57,60,61,1);
  line-height:44rpx;
  margin-bottom: 8rpx;
}

.expertInfo .tag {
  min-height:34rpx;
  font-size:24rpx;
  font-family:PingFang-SC-Regular,PingFang-SC;
  font-weight:400;
  color:rgba(57,60,61,1);
  line-height:34rpx;
  margin-bottom: 24rpx;
}

.expertInfo .place {
  min-height:34rpx;
  font-size:24rpx;
  font-family:PingFang-SC-Regular,PingFang-SC;
  font-weight:400;
  /* color:rgba(57,60,61,1); */
  color:rgba(102,102,101,1);
  line-height:34rpx;
}

.askBtn {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 14px;
  border-radius: 60rpx;
  border: 1px solid #28A7A9;
  color: #28A7A9;
}

.tab-content {
  height: 100%;
  padding-top: 180rpx;
  /* padding-bottom: 500rpx; */
}

.scoll-h {
  height: 100%;
}

.placeImg {
  width: 24rpx;
  height: 34rpx;
  margin-right: 8rpx;
  vertical-align: top;
}

.hotCountImg {
  width: 28rpx;
  height: 34rpx;
  /* margin-left: 90rpx; */
  margin-right: 8rpx;
  vertical-align: top;
}

.hotCount {
  vertical-align: top;
}

.schoolLogo {
  width: 130rpx;
  height: 130rpx;
}

.place-text {
  /* width: 186rpx; */
  width: 80%;
  display: inline-block;
}

.filter {
  display: flex;
  background: white;
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 99;
}

/* 下拉框 */
.com-selectBox{
    /* width: 200px; */
    flex: 1;
}
.com-sContent{
    /* border: 1px solid #e2e2e2; */
    background: white;
    font-size: 24rpx;
    position: relative;
    height: 82rpx;
    line-height: 82rpx;
    font-weight:500;
    color:rgba(40,167,169,1);
}
.com-sImg{
    /* position: absolute;
    left: 110rpx;
    top: 36rpx; */
    width: 18rpx;
    height: 10rpx;
    transition: all .3s ease;
    display: inline-block;
    vertical-align: middle;
}
.com-sTxt{
    /* overflow: hidden; */
    text-overflow: ellipsis;
    white-space: nowrap;
    padding-left: 40rpx ;
    padding-right: 10rpx ;
    font-size: 24rpx;
    display: inline-block;
    vertical-align: middle;
}
.com-sList{
    background: white;
    /* width: inherit; */
    width: 100%;
    position: absolute;
    /* border: 1px solid #e2e2e2; */
    border-top: none;
    box-sizing: border-box;
    z-index: 3000;
    /* max-height: 240rpx; */
    overflow: auto;
    
}
.com-sItem{
    height: 74rpx;
    line-height: 74rpx;
    border-top: 1px solid rgba(50,55,69,0.1);
    font-size:24rpx;
    font-family:PingFang-SC-Regular,PingFang-SC;
    font-weight:400;
    color:rgba(50,55,69,1);
    padding-left: 40rpx;
}
.com-sItem:first-child{
    border-top: none;
}

/* 搜索 */
.search-view {
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 99;
}

.search-icon {
  width: 28rpx;
  height: 28rpx;
  vertical-align: middle;
  position: absolute;
  right: 40rpx;
  top: 50%;
  margin-top: -14rpx;

}

/* 遮罩层 */

.mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  z-index: 97;
}

.has-content {
  padding-top: 142rpx;
}

/* 无搜索结果 */
.no-content {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.no-list-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
}

.no-list-text {
  font-size:20rpx;
  font-family:PingFang-SC-Regular,PingFang-SC;
  font-weight:400;
  color:rgba(57,60,61,1);
  line-height:32rpx;
}

.no-more {
  height:28rpx;
  font-size:20rpx;
  font-family:PingFang-SC-Regular,PingFang-SC;
  font-weight:400;
  color:rgba(57,60,61,.3);
  line-height:28rpx;
  margin-top: 32rpx;
  text-align: center;
  margin-bottom: 100rpx;
}

.my-search-style {
  background-color: #FAFAFA !important;
}