}

.tab-h {
  height: 82rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 82rpx;
  background: #FFFFFF;
  white-space: nowrap;
  position: fixed;
  top: 82rpx;
  left: 0;
  z-index: 98;
  font-size:24rpx;
  font-family:PingFang-SC-Medium,PingFang-SC;
  font-weight:500;
  /* margin-top: 2rpx; */
  border-top: 2px solid #F5F5F5;
  color:rgba(57,60,61,.5);
}

.tab-item {
  margin: 0 36rpx;
  display: inline-block;
}

.tab-item.active {
  color: #28A7A9;
  position: relative;
}

