.item-ans {
  width: 100%;
  display: flex;
  flex-grow: row no-wrap;
  justify-content: space-between;
  padding: 24rpx 40rpx 24rpx 0;
  box-sizing: border-box;
  min-height: 192rpx;
  align-items: center;
  /* border-bottom: 1px solid #f2f2f2; */

  background-color: #FFFFFF;
  margin-bottom: 8rpx;
}

.avatar {
  min-width: 100rpx;
  height: 100rpx;
  position: relative;
  padding-right: 16rpx;

  font-size:60rpx;
  font-family:PingFangSC-Semibold,PingFang SC;
  font-weight:600;
  color:rgba(40,167,169,1);
  line-height:100rpx;
  text-align: center;
}

.avatar .img {
  width: 100%;
  height: 100%;
}

.avatar .doyen {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  bottom: -2px;
  right: 20rpx;
}

.expertInfo {
  font-size: 12px;
  flex-grow: 2;
  color: #b0b0b0;
  line-height: 1.5em;
}

.expertInfo .name {
  min-height:44rpx;
  font-size:32rpx;
  font-family:PingFang-SC-Medium,PingFang-SC;
  font-weight:500;
  color:rgba(57,60,61,1);
  line-height:44rpx;
  margin-bottom: 8rpx;
}

.expertInfo .tag {
  min-height:34rpx;
  font-size:24rpx;
  font-family:PingFang-SC-Regular,PingFang-SC;
  font-weight:400;
  color:rgba(57,60,61,1);
  line-height:34rpx;
  margin-bottom: 24rpx;
}

.expertInfo .place {
  min-height:34rpx;
  font-size:24rpx;
  font-family:PingFang-SC-Regular,PingFang-SC;
  font-weight:400;
  color:rgba(57,60,61,1);
  line-height:34rpx;
}

.askBtn {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 14px;
  border-radius: 60rpx;
  border: 1px solid #28A7A9;
  color: #28A7A9;
}

.tab-content {
  height: 100%;
  padding-top: 98rpx;
}

.scoll-h {
  height: 100%;
}

.placeImg {
  width: 24rpx;
  height: 34rpx;
  margin-right: 8rpx;
  vertical-align: top;
}

.hotCountImg {
  width: 28rpx;
  height: 34rpx;
  /* margin-left: 90rpx; */
  margin-right: 8rpx;
  vertical-align: top;
}

.schoolLogo {
  width: 130rpx;
  height: 130rpx;
}

.place-text {
  width: 186rpx;
  display: inline-block;
}
