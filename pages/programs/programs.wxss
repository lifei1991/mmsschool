.programs {
  background-color: #F5F5F5;
  height: 100%;
  /* padding-bottom: 180rpx; */
}

.tab-h {
  height: 82rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 82rpx;
  background: #FFFFFF;
  white-space: nowrap;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  font-size:24rpx;
  font-family:PingFang-SC-Medium,PingFang-SC;
  font-weight:500;
  /* margin-top: 2rpx; */
  border-top: 2px solid #F5F5F5;
}

.tab-item {
  margin: 0 36rpx;
  display: inline-block;
}

.tab-item.active {
  color: #28A7A9;
  position: relative;
}

