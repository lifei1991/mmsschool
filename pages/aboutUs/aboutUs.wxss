/* pages/aboutUs/aboutUs.wxss */
.about-us {
  font-size: 28rpx;
  color:rgba(64,64,64,1);
  padding-bottom: 250rpx;

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  font-family: PingFang-SC-Medium,PingFang-SC;

  margin: 0;
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
}

.intro-logo {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 16rpx;
}

.intro {
  width:690rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 2px 15px 0px rgba(0,0,0,0.07);
  border-radius:8rpx;
  font-weight:400;
  color:rgba(64,64,64,1);
  line-height:44rpx;
  letter-spacing:2rpx;
  margin-top: 46rpx;

  display: flex;
  flex-direction: column;
  align-items: center;
}

.intro-cotent {
  width: 610rpx;
  margin: 38rpx 0 40rpx 0;
}